<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Elena"
        android:id="@+id/columnFirst"
        android:layout_width="@dimen/listViewFromWidth"
        android:layout_height="@dimen/listViewFromHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:text="Krunic"
        android:id="@+id/columnLast"
        android:layout_width="@dimen/listViewSubjectWidth"
        android:layout_height="@dimen/listViewSubjectHeight"
        android:layout_toEndOf="@id/columnFirst"
        android:layout_toRightOf="@id/columnFirst"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:text="Elena Krunic"
        android:textColor="#868a91"
        android:id="@+id/columnDisplay"
        android:layout_width="@dimen/listViewContentWidth"
        android:layout_height="@dimen/listViewContentHeight"
        android:layout_toEndOf="@id/columnLast"
        android:layout_toRightOf="@id/columnLast"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <TextView
        android:text="elenakrunic@gmail.com"

        android:textColor="#5c6066"
        android:id="@+id/columnEmail"
        android:layout_below="@id/columnDisplay"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal"/>

</RelativeLayout>